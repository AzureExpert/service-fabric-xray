@{
    ViewData["Title"] = "Home Page";
}

<section id="content">
    <xray>
        <div class="loading">
            <h3>Loading...</h3>
        </div>
    </xray>
</section>

@section Scripts {
    <script>
        System.config({
            packages: {
                'app': { defaultExtension: 'js' },
                'lib': { defaultExtension: 'js' },
            },
        });

        System.import('app/boot')
            .then(null, console.error.bind(console));
    </script>
}